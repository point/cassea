<?xml version='1.0' encoding='utf-8' ?>
<root internal="0">
	<WDataSet priority="11">
		<model>help</model>
        <classname>help</classname>
        <datasource method="helpList" >
            <param from="p2" count="2" as="array" />
        </datasource>
    </WDataSet>
    <WDataHandler id="dh_upd">
        <model>help</model>
        <classname>help</classname>
        <handler method="updDb" >
            <param from="p2" count="2" as="array" />
        </handler>
    </WDataHandler>
    <WValueChecker id="vc1">
        <filter>string_quote</filter>
    </WValueChecker>

    <WJavaScript id="js" onclick="if(flag) return confirm('?????')"> </WJavaScript>

    <WTextareaJS id="jedit" onchange="flag=true">
        <before>
            var flag=false;
        </before>
    </WTextareaJS>
    <WTable>
        <WTableRow>        
            <WTableColumn>
                <WList>
                   <WRoll id="ctrl">
                       <WListItem><WText id='ctrl_name' b='1'/>
                            <WList>
                                <WRoll id='pages'>
                                    <WListItem>
                                        <WHyperLink id="pagehref" javascript="js" />
                                    </WListItem>
                                 </WRoll>
                             </WList>
                       </WListItem>
                   </WRoll>
                </WList>  
            </WTableColumn>    
            <WTableColumn>
                    <WForm method='POST' id='edit'>
                    <WMarkdown id="helpEdit" javascript="jedit" valuechecker="vc1"/>
                    <WButton value="Обновить" id="update_btn" />
                </WForm>    
            </WTableColumn>
        </WTableRow>
    </WTable>  
</root>
